# Example environment variables for Thoth Database System
# Copy this file to .env and modify values as needed

# MongoDB Configuration
MONGODB_CONNECTION_STRING=mongodb://root:password@localhost:27017/thoth?authSource=admin
MONGODB_DATABASE_NAME=thoth
MONGODB_COLLECTION_NAME=objects

# DynamoDB Local Configuration
AWS_ACCESS_KEY_ID=fakeAccessKeyId
AWS_SECRET_ACCESS_KEY=fakeSecretAccessKey
AWS_REGION=us-east-1
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_TABLE_NAME=ThothObjects

# Application Configuration
NODE_ENV=development